package unreal;

import "unreal/gdk/core_types.schema";

type UnrealRPCPayload {
    uint32 offset = 1;
    uint32 rpc_index = 2;
    bytes rpc_payload = 3;
}

type UnrealPackedRPCPayload {
    uint32 offset = 1;
    uint32 rpc_index = 2;
    bytes rpc_payload = 3;
    EntityId entity = 4;
}

component UnrealClientRPCEndpoint {
    id = 9990;
    event UnrealRPCPayload unreliable_client_to_server_rpc;
    event UnrealPackedRPCPayload unreliable_packed_client_to_server_rpc;
    command Void reliable_server_to_client_rpc(UnrealRPCPayload);
}

component UnrealServerRPCEndPoint {
    id = 9989;
    event UnrealRPCPayload unreliable_server_to_client_rpc;
    event UnrealPackedRPCPayload unreliable_packed_server_to_client_rpc;
    command Void reliable_client_to_server_rpc(UnrealRPCPayload);
}

component UnrealMulticastRPCEndpoint {
    id = 9987;
    event UnrealRPCPayload unreliable_multicast_rpc;
}

// Component that contains a list of RPCs to be executed
// as a part of entity creation request
component RPCsOnEntityCreation {
    id = 9985;
    list<UnrealRPCPayload> rpcs = 1;
    command Void clear_rpcs(Void);
}

